<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>

        <div class="container site-content">
            <h2>Insert Product</h2>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <% if (errorMessage) { %>
                                <div class="alert alert-warning" role="alert">
                                    <%= errorMessage[0].param + ': '+ errorMessage[0].msg %>
                                </div>
                                <% } %>
                                    <form method="POST">
                                        <div class="form-group">
                                            <label for="product_name">Product Name</label>
                                            <input type="text" class="form-control" name="product_name" placeholder="Product Name" value="<%= product_name %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="price">Price</label>
                                            <input type="number" class="form-control" name="price" placeholder="Price" value="<%= price %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="amount">amount</label>
                                            <input type="number" class="form-control" name="amount" placeholder="amount" value="<%= amount %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="detail">detail</label>
                                            <input type="text" class="form-control" name="detail" placeholder="detail" value="<%= detail %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="category">category</label>
                                            <input type="text" class="form-control" name="category" placeholder="Price" value="<%= category %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="img">img</label>
                                            <input type="text" class="form-control" name="img" placeholder="img" value="<%= img %>">
                                        </div>
                                        <a href="/products" class="btn btn-secondary"><i class="fa fa-chevron-left" aria-hidden="true"></i> Back</a>
                                        <button type="submit" class="btn btn-success"> <i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                                    </form>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../includes/end.ejs') %>